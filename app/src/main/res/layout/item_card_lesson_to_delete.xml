<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_16dp"
    app:cardBackgroundColor="@color/colorBackgroundLight"
    app:cardElevation="@dimen/margin_16dp"
    app:cardCornerRadius="10dp">

    <!--<ImageView
        android:src="@drawable/bg_card_lesson_orange"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:padding="@dimen/margin_12dp">

        <TextView
            android:id="@+id/item_tv_lesson_number_to_delete"
            android:layout_centerVertical="true"
            style="@style/TextView"
            android:textColor="@color/colorTextLight"
            android:textStyle="bold"
            android:textSize="32sp"
            tools:text="1"/>

        <TextView
            style="@style/TextView"
            android:id="@+id/item_tv_lesson_name_to_delete"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_tv_lesson_number_to_delete"
            android:layout_toStartOf="@id/item_iv_to_delete"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:textColor="@color/colorTextLight"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="Переменные"/>

        <ImageView
            android:id="@+id/item_iv_to_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_delete_48dp"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>