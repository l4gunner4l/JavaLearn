<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_12dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="@dimen/margin_16dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_lesson_tv_question_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_8dp"
                android:textAppearance="@style/Text.Huge"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                tools:text="1"
                />
            <TextView
                android:id="@+id/item_lesson_tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAppearance="@style/Text.Medium"
                android:textStyle="bold"
                tools:text="Какой-то вопрос?"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>