<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/lesson_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/toolbar_lesson" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson_toolbar"
        android:background="@color/colorAccent"/>


    <TextView
        android:id="@+id/lesson_tv_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson_toolbar"
        android:layout_margin="@dimen/margin_16dp"
        android:text="Stars count "
        android:textAlignment="center"
        style="@style/TextView.Dark"/>

    <TextView
        android:id="@+id/lesson_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lesson_tv_stars"
        android:layout_margin="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_32dp"
        android:scrollbars="vertical"
        android:textAlignment="inherit"
        android:text="Some text"
        android:textColor="@color/colorTextDark"
        android:textAppearance="@style/Text.Small"/>
</androidx.constraintlayout.widget.ConstraintLayout>