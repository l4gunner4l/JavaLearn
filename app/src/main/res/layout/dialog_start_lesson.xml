<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_32dp"
    android:paddingEnd="@dimen/margin_32dp"
    android:paddingTop="@dimen/margin_16dp"
    android:paddingBottom="@dimen/margin_16dp"
    android:background="@color/colorBackgroundLight"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_start_lesson_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Huge"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        tools:text="Переменные"/>
    <TextView
        android:id="@+id/dialog_start_lesson_tv_lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Huge"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        tools:text="Урок: 1/10"/>
    <TextView
        android:id="@+id/dialog_start_lesson_tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        style="@style/Text.Medium"
        android:textColor="@color/colorTextDark"
        tools:text="Прогресс: 0/3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        style="@style/Text.Medium"
        android:textAlignment="center"
        android:textColor="@color/colorTextDark"
        android:text="@string/dialog_start_lesson_helping"/>

    <Button
        android:id="@+id/dialog_start_lesson_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="@string/label_start_lesson"
        style="@style/BtnAccent.BtnLesson"/>

</LinearLayout>