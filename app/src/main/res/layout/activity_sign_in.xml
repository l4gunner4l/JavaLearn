<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".sign.SignInActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_sign_in"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_16dp"
            android:src="@drawable/ic_close_light_32dp"
            android:onClick="endSignInActivity"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_enter_your_details"
            style="@style/StyleTextView"
            android:textAppearance="@style/Text.Huge"/>
    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/toolbar_sign_in"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar_sign_in"
        android:layout_marginTop="@dimen/margin_32dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sign_in_til_email"
            android:hint="@string/text_email"
            style="@style/StyleTIL">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textEmailAddress"
                style="@style/StyleEditText"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sign_in_til_password"
            android:hint="@string/text_password"
            style="@style/StyleTIL">
            <com.google.android.material.textfield.TextInputEditText
                android:inputType="textPassword"
                style="@style/StyleEditText"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/sign_in_btn"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/padding_8dp"
            android:paddingEnd="@dimen/padding_8dp"
            android:layout_marginBottom="@dimen/margin_16dp"
            android:text="@string/label_sign_in"
            android:layout_marginTop="@dimen/margin_32dp"
            style="@style/StyleBtnAccent.BtnSign"/>
    </LinearLayout>



</RelativeLayout>