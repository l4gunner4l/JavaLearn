<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundLight</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>



    <style name="StyleBtnAccent">
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleBtnAccent.BtnSign">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
    </style>


    <style name="SignTIL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="hintTextAppearance">@style/Text.Medium</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
    </style>

    <style name="SignEditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/edit_text_light</item>
        <item name="android:padding">@dimen/padding_8dp</item>
        <item name="android:maxLength">30</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:singleLine">true</item>

    </style>

    <style name="StyleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
    </style>
    <style name="StyleTextView.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textColor">@color/colorTextLight</item>
    </style>
    <style name="StyleTextView.Dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Text.Medium</item>
        <item name="android:textColor">@color/colorTextDark</item>
    </style>


    <style name="StyleStarsRatingBar" parent="Theme.AppCompat">
        <!--<item name="colorControlNormal">@color/colorLight</item>-->
        <item name="colorControlActivated">@color/colorLight</item>
    </style>




    <style name="Text">
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="Text.Huge">
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>
    <style name="Text.Big">
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>
    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>
    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>




</resources>
